  <net name="NetM1" mode="virtual_bridge"/>
  <net name="NetM2" mode="virtual_bridge"/>
  <net name="NetSsrc" mode="virtual_bridge"/>
  

  <vm name="R1" type="lxc" arch="x86_64">
    <filesystem type="cow">/usr/share/vnx/filesystems/rootfs_lxc_ubuntu64</filesystem>
    <if id="1" net="Net0">
      <ipv4>10.0.0.1/24</ipv4>
    </if>
    <if id="2" net="Net1">
      <ipv4>10.1.0.1/24</ipv4>
    </if>
    <route type="ipv4" gw="10.1.0.2">default</route>
    <filetree seq="on_boot" root="/etc/hosts" perms="755">conf/hosts</filetree>
    <exec seq="on_boot" type="verbatim">
        echo "nameserver 8.8.8.8" >> /etc/resolv.conf
        echo 1 > /proc/sys/net/ipv4/ip_forward
        ip route add 10.5.0.0/24 via 10.1.0.2
        ip route add 10.6.0.0/24 via 10.1.0.2
        ip route add 10.7.0.0/24 via 10.1.0.2
        ip route add 10.8.0.0/24 via 10.1.0.2
    </exec>
  </vm>

